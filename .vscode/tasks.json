{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "format",
            "type": "shell",
            "command": "poetry run black . && poetry run ruff check --fix ."
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "poetry run ruff check ."
        },
        {
            "label": "typecheck",
            "type": "shell",
            "command": "poetry run mypy ."
        },
        {
            "label": "test",
            "type": "shell",
            "command": "poetry run pytest"
        },
        {
            "label": "audit",
            "type": "shell",
            "command": "poetry run pip-audit"
        },
        {
            "label": "check-all",
            "type": "shell",
            "command": "poetry run ruff check . && poetry run black --check . && poetry run mypy . && poetry run pytest"
        }
    ]
}
